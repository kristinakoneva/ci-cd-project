<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="@color/light_grey"/>
    <!--When Button is enabled -->
    <item android:state_enabled="true" android:color="@color/purple"/>
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="@color/purple"/>
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="@color/purple"/>
    <!--Default Background Color -->
    <item android:color="@color/purple"/>
</selector>