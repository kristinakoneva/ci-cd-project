<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="24dp">

    <ImageButton
        android:id="@+id/imgBtnCamera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_camera"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnCamera"
        app:layout_constraintStart_toStartOf="@+id/imgBtnCamera"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnCamera"
        android:textSize="14sp"
        android:textColor="@color/black"
        />


    <ImageButton
        android:id="@+id/imgBtnGallery"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_gallery"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/tvGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallery"
        app:layout_constraintStart_toStartOf="@+id/imgBtnGallery"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnGallery"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnGallery"
        android:textSize="14sp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>